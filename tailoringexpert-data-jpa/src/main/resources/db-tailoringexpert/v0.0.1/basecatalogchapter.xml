<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="Table: BASECATALOGCHAPTER" author="Michael Baedorf">
        <createTable tableName="BASECATALOGCHAPTER">
            <column name="CHAPTER_ID" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="NAME" type="VARCHAR(255)"/>
            <column name="POSITION" type="BIGINT"/>
            <column name="NUMBER" type="VARCHAR(16)"/>
            <column name="CHAPTER_ORDER" type="BIGINT"/>
            <column name="PARENTCHAPTER_ID" type="BIGINT"/>
        </createTable>
    </changeSet>

    <changeSet id="Constraint: FK_BASECATALOGCHAPTER_PARENTCHAPTER" author="Michael Baedorf">
        <addForeignKeyConstraint constraintName="FK_BASECATALOGCHAPTER_PARENTCHAPTER"
                                 baseTableName="BASECATALOGCHAPTER"
                                 baseColumnNames="PARENTCHAPTER_ID"
                                 referencedTableName="BASECATALOGCHAPTER"
                                 referencedColumnNames="CHAPTER_ID"/>
    </changeSet>

</databaseChangeLog>
