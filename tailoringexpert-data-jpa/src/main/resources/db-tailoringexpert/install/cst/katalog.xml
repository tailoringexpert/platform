<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="UC_KATALOGVERSION" author="Michael Baedorf">
        <addUniqueConstraint constraintName="UC_KATALOG" tableName="KATALOG" columnNames="VERSION"/>
    </changeSet>

    <changeSet id="FK_KATALOG_ANFORDERUNGGRUPPE" author="Michael Baedorf">
        <addForeignKeyConstraint constraintName="FK_KATALOG_KAPITEL"
                                 baseTableName="KATALOG" baseColumnNames="KAPITEL_ID"
                                 referencedTableName="KATALOGKAPITEL"
                                 referencedColumnNames="KAPITEL_ID"/>
    </changeSet>
</databaseChangeLog>
