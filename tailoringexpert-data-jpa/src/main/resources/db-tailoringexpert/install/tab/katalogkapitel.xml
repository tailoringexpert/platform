<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="1" author="Michael Baedorf">
        <createTable tableName="KATALOGKAPITEL">
            <column name="KAPITEL_ID" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="NAME" type="VARCHAR(255)"/>
            <column name="POSITION" type="BIGINT"/>
            <column name="NUMMER" type="VARCHAR(16)"/>
            <column name="KAPITEL_ORDER" type="BIGINT"/>
            <column name="PARENTKAPITEL_ID" type="BIGINT"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
